{
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "import/prefer-default-export": 0,
    "no-restricted-syntax": "off",
    "no-param-reassign": [2, { "props": false }],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-use-before-define": "off",
    "no-plusplus": "off",
    "import/no-cycle": "off"
  }
}
